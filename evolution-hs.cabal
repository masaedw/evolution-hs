category:            Game
build-type:          Simple
cabal-version:       >=1.10

executable evolution-hs
  main-is:             Main.hs
  hs-source-dirs:      src
  ghc-options:         -Wall -O2
  -- other-modules:       
  default-language:    Haskell2010
  build-depends:       base >= 4.5
                     , MonadRandom >= 0.1
                     , containers >= 0.4
                     , mtl >= 1.1
                     , random >= 1.0
                     , transformers >= 0.3

test-suite doctest
  type:                exitcode-stdio-1.0
  default-language:    Haskell2010
  hs-source-dirs:      test
  ghc-options:         -threaded -Wall
  main-is:             doctests.hs
  build-depends:       base
                     , doctest >= 0.9.3
